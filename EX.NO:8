import pandas as pd

# Sample sales_data table
sales_data = {
    "Item": ["Laptop", "Laptop", "Mobile", "Mobile", "Tablet", "Tablet"],
    "Units_Sold": [5, 7, 10, 12, 8, 6]
}

# Create DataFrame
df = pd.DataFrame(sales_data)

# Create Pivot Table to find item-wise units sold
pivot_table = pd.pivot_table(
    df,
    index="Item",
    values="Units_Sold",
    aggfunc="sum"
)

print(pivot_table)
