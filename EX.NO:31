import matplotlib.pyplot as plt
import numpy as np

# Sample data
groups = ['G1', 'G2', 'G3', 'G4', 'G5']
men_means = np.array([22, 30, 35, 35, 26])
women_means = np.array([25, 32, 30, 35, 29])
men_std = np.array([4, 3, 4, 1, 5])
women_std = np.array([3, 5, 2, 3, 3])

x = np.arange(len(groups))  # label locations
bar_width = 0.5

# Create stacked bar plot
plt.figure(figsize=(8,5))
plt.bar(x, men_means, bar_width, yerr=men_std, capsize=5, color='blue', label='Men')
plt.bar(x, women_means, bar_width, bottom=men_means, yerr=women_std, capsize=5, color='pink', label='Women')

# Add labels, title, legend
plt.xlabel("Group")
plt.ylabel("Scores")
plt.title("Stacked Bar Plot with Error Bars")
plt.xticks(x, groups)
plt.legend()
plt.grid(axis='y', linestyle='--', alpha=0.7)

plt.show()
