import pandas as pd
import numpy as np

# Create sample DataFrame with missing values
data = {
    "A": [10, 20, np.nan, 40],
    "B": [5, np.nan, 15, np.nan],
    "C": [np.nan, 2, 3, 4]
}

df = pd.DataFrame(data)

# Find missing values
print("Missing values:")
print(df.isna())

# Replace missing values with 0 (no valuable information)
df_filled = df.fillna(0)

print("\nDataFrame after replacing missing values:")
print(df_filled)
