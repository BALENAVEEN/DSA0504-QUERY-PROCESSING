import pandas as pd
import numpy as np

# Create a DataFrame with random values
np.random.seed(2)
df = pd.DataFrame(
    np.random.randint(1, 100, size=(10, 4)),
    columns=["A", "B", "C", "D"]
)

# Convert some values to NaN
df.iloc[1, 2] = np.nan
df.iloc[4, 0] = np.nan
df.iloc[7, 3] = np.nan

# Function to highlight NaN values
def highlight_nan(val):
    if pd.isna(val):
        return "background-color: yellow"
    else:
        return ""

# Apply styling
styled_df = df.style.applymap(highlight_nan)

styled_df
